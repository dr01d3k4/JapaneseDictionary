<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/rlKanaChartLayout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:tag="wide_portrait"
	tools:context=".KanaChartActivity$KanaChartFragment" >

	<TableLayout
		android:id="@+id/tlMainTable"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" />

	<TableLayout
		android:id="@+id/tlDakutenTable"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="16dp"
		android:layout_toRightOf="@id/tlMainTable" />

	<TableLayout
		android:id="@+id/tlYTable"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/tlMainTable" />

	<TableLayout
		android:id="@+id/tlYDakutenTable"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tlMainTable"
		android:layout_marginLeft="16dp"
		android:layout_toRightOf="@id/tlYTable" />

</RelativeLayout>